<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <title> Dial Clock Control Panel </title>
  </head>
  <body>
    <div class="w3-container w3-center" width="100%">
      <div class="w3-container w3-center">
        <h1> General </h1>
        <form class="w3-container" action="/invertmode" method="post">
          <input type="submit" name="submit" value="Invert mode">
        </form>
      </div>

      <div class="w3-container w3-center">
        <h1> Hours </h1>
        <form class="w3-container" action="/set/hours/pos" method="post">
          <input type="number" name="pos" placeholder="Servo position (700 - 2200)">
          <input type="submit" name="submit" value="Set" class="w3-button w3-red">
        </form>
        <form class="w3-container" action="/set/hours/left" method="post">
          <input type="number" name="left" placeholder="left end point">
          <input type="submit" name="submit" value="Set" class="w3-button w3-green">
        </form>
        <form class="w3-container" action="/set/hours/right" method="post">
          <input type="number" name="right" placeholder="right end point">
          <input type="submit" name="submit" value="Set" class="w3-button w3-blue">
        </form>
      </div>

      <hr>

      <div class="w3-container w3-center">
        <h1> Minutes </h1>
        <form class="w3-container" action="/set/minutes/pos" method="post">
          <input type="number" name="pos" placeholder="Servo position (700 - 2200)">
          <input type="submit" name="submit" value="Set" class="w3-button w3-red">
        </form>
        <form class="w3-container" action="/set/minutes/left" method="post">
          <input type="number" name="left" placeholder="left end point">
          <input type="submit" name="submit" value="Set" class="w3-button w3-green">
        </form>
        <form class="w3-container" action="/set/minutes/right" method="post">
          <input type="number" name="right" placeholder="right end point">
          <input type="submit" name="submit" value="Set" class="w3-button w3-blue">
        </form>
      </div>

      <hr>

      <div class="w3-container w3-center">
        <h1> Seconds </h1>
        <form class="w3-container" action="/set/seconds/pos" method="post">
          <input type="number" name="pos" placeholder="Servo position (700 - 2200)">
          <input type="submit" name="submit" value="Set" class="w3-button w3-red">
        </form>
        <form class="w3-container" action="/set/seconds/left" method="post">
          <input type="number" name="left" placeholder="left end point">
          <input type="submit" name="submit" value="Set" class="w3-button w3-green">
        </form>
        <form class="w3-container" action="/set/seconds/right" method="post">
          <input type="number" name="right" placeholder="right end point">
          <input type="submit" name="submit" value="Set" class="w3-button w3-blue">
        </form>
      </div>
    </body>
  </html>
